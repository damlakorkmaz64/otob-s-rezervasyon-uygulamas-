<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- BAÅžLIK -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut Seferler"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SEFER LÄ°STESÄ° CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSeferler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
        app:layout_constraintBottom_toTopOf="@id/btnHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ä°Ã§ dÃ¼zen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ðŸ” Arama AlanÄ± -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSearchFrom"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Nereden"
                    android:inputType="textCapWords"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <EditText
                    android:id="@+id/etSearchTo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Nereye"
                    android:inputType="textCapWords"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:text="Ara"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <!-- ðŸ“‹ Sefer Listesi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSeferler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- REZERVASYON GEÃ‡MÄ°ÅžÄ° -->
    <Button
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rezervasyon GeÃ§miÅŸim"
        android:textAllCaps="false"
        android:backgroundTint="#1976D2"
        android:textColor="@android:color/white"
        android:minHeight="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LOGOUT -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ã‡Ä±kÄ±ÅŸ Yap"
        android:textAllCaps="false"
        android:backgroundTint="#D32F2F"
        android:textColor="@android:color/white"
        android:minHeight="52dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

