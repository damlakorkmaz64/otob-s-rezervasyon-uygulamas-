<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Rota -->
        <TextView
            android:id="@+id/tvRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="İzmir → Ankara"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCancel"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Tarih + Saat -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="25.12.2025 • 14:30"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvRoute"
            app:layout_constraintStart_toStartOf="@id/tvRoute"
            app:layout_constraintEnd_toStartOf="@id/btnCancel" />

        <!-- Koltuk -->
        <TextView
            android:id="@+id/tvSeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Koltuk: 12A"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateTime"
            app:layout_constraintStart_toStartOf="@id/tvRoute"
            app:layout_constraintEnd_toStartOf="@id/btnCancel"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- İptal Butonu -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="İptal Et"
            android:textAllCaps="false"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:minWidth="0dp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


